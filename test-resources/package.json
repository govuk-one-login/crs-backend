{
  "name": "crs-test-resources",
  "version": "1.0.0",
  "description": "Supporting infrastructure to test the bounds of the crs-backend service",
  "type": "module",
  "engines": {
    "node": "22"
  },
  "scripts": {
    "test": "      JEST_JUNIT_OUTPUT_NAME=test-report.xml  ./node_modules/.bin/jest --testPathPatterns=test/       --silent --passWithNoTests                 ",
    "test:unit": " JEST_JUNIT_OUTPUT_NAME=unit-report.xml  ./node_modules/.bin/jest --testPathPatterns=test/unit/  --silent --passWithNoTests                 ",
    "test:api": "  JEST_JUNIT_OUTPUT_NAME=api-report.xml   ./node_modules/.bin/jest --testPathPatterns=test/api/   --silent --passWithNoTests --coverage false",
    "test:infra": "JEST_JUNIT_OUTPUT_NAME=infra-report.xml ./node_modules/.bin/jest --testPathPatterns=test/infra/ --silent --passWithNoTests                 ",
    "lint": "./node_modules/.bin/eslint ./src/functions  --no-error-on-unmatched-pattern",
    "format": "./node_modules/.bin/prettier --write '**/*.ts'",
    "format:check": "./node_modules/.bin/prettier --check '**/*.ts'",
    "build:infra": "./combine_template.sh",
    "infra:format": "rain fmt --write template.yaml",
    "infra:format:check": "rain fmt --verify template.yaml"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node-jose": "^1.1.13",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.1.0",
    "jest": "^30.0.5",
    "jest-junit": "^16.0.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.32.0"
  },
  "dependencies": {
    "esbuild": "^0.25.4",
    "tsc": "^2.0.4"
  }
}
